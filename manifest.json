{
  "manifest_version": 2,
  "name": "redurl",
  "version": "1.0",
  "description": "url redirector",

  "author": "ahsmha",
  "homepage_url": "https://github.com/ahsmha/redurl",

  "permissions": [
    "webRequest",
    "storage",
    "activeTab",
    "tabs",
    "webRequestBlocking"
  ],

  "options_ui": {
    "page": "./ui/main.html",
    "open_in_tab": true
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "browser_action": {
    "default_icon": {
      "48": "icons/icon-48.png"
    },
    "default_popup": "ui/popup.html",
    "default_title": "redurl"
  },

  "icons": {
    "48": "icons/icon-48.png"
  },

  "content_security_policy": "script-src 'self'"

}
